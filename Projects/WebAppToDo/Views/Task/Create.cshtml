@model WebAppToDo.Models.TaskItem

@{
    ViewData["Title"] = "Create New Task";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Task</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
                            <label asp-for="IsCompleted" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Save Task</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to Task List</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
