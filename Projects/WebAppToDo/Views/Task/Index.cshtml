@model IEnumerable<WebAppToDo.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary">📋 Your Task List</h2>
        <a asp-action="Create" class="btn btn-success mt-2">➕ Add New Task</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            😴 No tasks found. Start by creating one!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm rounded-pill me-2">
                    ✏️ Edit
                </a>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-@((task.IsCompleted ? "success" : "danger"))">
                        <div class="card-body">
                            <h5 class="card-title text-@((task.IsCompleted ? "success" : "danger")) fw-bold">
                                @task.Title
                            </h5>
                            <p class="card-text">
                                Status:
                                <span class="badge bg-@((task.IsCompleted ? "success" : "danger"))">
                                    @(task.IsCompleted ? "Completed" : "Pending")
                                </span>
                            </p>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this task?');">
                                <input type="hidden" name="Id" value="@task.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
