@model List<WebAppPractice.Models.Employee>




<div class="container mt-4">
    <div class="row">
        <!-- Form -->
        <div class="col-md-6">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" name="Date" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Status:</label>
                    <select name="Status" class="form-control" required>
                        <option value="">-- Select --</option>
                        <option value="Present">Present</option>
                        <option value="Absent">Absent</option>
                        <option value="Leave">Leave</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>
        </div>
        <!-- List -->
        <div class="col-md-6">
            <h4>Attendance List</h4>
            <div style="max-height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td>@emp.Name</td>
                                <td>@emp.Date.ToShortDateString()</td>
                                <td>@emp.Status</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <form asp-action="Delete" method="post">
                                        @Html.AntiForgeryToken()  <!-- ✅ ye line add karo -->
                                        <input type="hidden" name="id" value="@emp.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
     

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-image: url('wwwroot\images\pexels-florian-eckerle-269098632-32893345.jpg'); /* ✅ relative path (wwwroot/images/bg.jpg) */
        background-size: cover;
