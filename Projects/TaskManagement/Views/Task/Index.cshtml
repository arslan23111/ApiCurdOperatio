@model List<TaskManagement.Models.TaskItem>


@section Styles {
    <style>
        body {
            background-image: url(wwwroot\image\img.jpg); /* ✅ Image path */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            min-height: 100vh;
        }
    </style>
}

<div class="container mt-4">
    <h2>ToDo Task List</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">+ Add New Task</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.Date.ToShortDateString()</td>
                    <td>
                        @if (task.Status =="Completed")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@task.Id" />
       
                        </form>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()  <!-- Very Important -->
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this task?');">Delete</button>
                        </form>

                        

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
